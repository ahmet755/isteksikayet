@model Complaint
@{
    ViewData["Title"] = "ComplaintAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Şikayet Formu</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Anasayfa</a></li>
              <li class="breadcrumb-item active">Şikayet Güncelleme</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <!-- left column -->
          <div class="col-md-12">
            <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Şikayet @Model.Name</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form asp-controller="Home" asp-action="ComplaintUpdate" method="post" enctype="multipart/form-data">
                <div class="card-body">
                  <div class="form-group">
                    <label for="exampleInputEmail1">E-Posta Adresi</label>
                    <input asp-for="Name" class="form-control" placeholder="Şikayet İsmini Girin" value="@Model.Name">
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Şikayet</label>
                    <input asp-for="Description" class="form-control" placeholder="Şikayet Açıklamasını Girin" value="@Model.Description">
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Şikayet Dosyası</label>
                    <input type="hidden" value="@Model.FileUrl" class="form-control">
                    <input type="file" name="File">
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Departman</label>
                    <select asp-for="DepartmentId" asp-items="@ViewBag.Department" class="form-control"></select>
                  </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
              </form>
            </div>
            <!-- /.card -->
          </div>
          <!--/.col (right) -->
        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
